#!/bin/sh
userresources=$HOME/.config/X11/Xresources
usermodmap=$HOME/.config/X11/Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap
wm="dwm"
#wm="dbus-launch --exit-with-session emacs -mm --debug-init -l ~/.config/emacs/desktop.el"
#wm="$HOME/.local/share/xmonad/xmonad-x86_64-linux "
#wm="awesome"

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

[ -f $sysresources ] && xrdb -merge $sysresources
[ -f $sysmodmap ] && xmodmap $sysmodmap
[ -f "$userresources" ] && xrdb -merge "$userresources"
[ -f "$usermodmap" ] && xmodmap "$usermodmap"
. $HOME/.config/X11/env
xsetroot -cursor_name left_ptr &
sudo $HOME/scripts/powertop &
$HOME/scripts/walli -r &
#nm-applet --indicator &
#connman-gtk --tray &
[ $wm = "dwm" ] && dwmblocks &
#/usr/bin/emacs --daemon --no-x-resources &
dunst &
mpd &
exec $wm
