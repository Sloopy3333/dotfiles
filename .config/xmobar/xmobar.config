Config { 

   -- appearance
     font =         "xft:Hack-Bold:size=10:Bold:antialias=true,Hack Nerd Font:size=13:Bold:antialias=true"
   , bgColor =      "#282a36"
   , fgColor =      "#f8f8f2"
