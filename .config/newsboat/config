# set

always-display-description no
always-download "https://archlinux.org/feeds/news/"
browser "qutebroswer %u"
confirm-mark-all-feeds-read yes
download-full-page yes
# key-bindings

unbind-key ENTER
unbind-key q
unbind-key Q
unbind-key r
unbind-key R
unbind-key A
unbind-key C
unbind-key n
unbind-key p
unbind-key ^R
unbind-key ^K

bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key ZZ hard-quit
bind-key J next
bind-key K prev
bind-key L next-unread
bind-key H prev-unread
